{{define "admin/admin-logs.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="admin-page-header">
        <h1>System Logs</h1>
        <div class="admin-page-breadcrumb">
            <a href="/admin">Admin</a> /
            <span>Logs</span>
        </div>
    </div>

    <div class="admin-page-container wide">
        <div class="admin-nav-links">
            <a href="/admin" class="admin-nav-link">‚Üê Dashboard</a>
            <a href="{{.admin_path}}/system" class="admin-nav-link">System Info</a>
        </div>

        <!-- Controls Panel -->
        <div class="controls-panel">
            <div class="controls-grid">
                <div class="control-group">
                    <label for="logLevel">Log Level</label>
                    <select id="logLevel" aria-label="Filter by log level">
                        <option value="all">All Levels</option>
                        <option value="DEBUG">Debug</option>
                        <option value="INFO">Info</option>
                        <option value="WARN">Warning</option>
                        <option value="ERROR">Error</option>
                        <option value="FATAL">Fatal</option>
                    </select>
                </div>

                <div class="control-group">
                    <label for="logSource">Log Source</label>
                    <select id="logSource" aria-label="Filter by log source">
                        <option value="all">All Sources</option>
                        <option value="server">Server</option>
                        <option value="api">API</option>
                        <option value="database">Database</option>
                        <option value="tor">Tor Service</option>
                        <option value="email">Email</option>
                        <option value="scheduler">Scheduler</option>
                    </select>
                </div>

                <div class="control-group">
                    <label for="searchQuery">Search Logs</label>
                    <input type="text" id="searchQuery" placeholder="Search in logs..." aria-label="Search logs">
                </div>

                <div class="control-group">
                    <label for="tailLines">Tail Lines</label>
                    <select id="tailLines" aria-label="Number of lines to display">
                        <option value="100">Last 100 lines</option>
                        <option value="250" selected>Last 250 lines</option>
                        <option value="500">Last 500 lines</option>
                        <option value="1000">Last 1000 lines</option>
                        <option value="all">All lines</option>
                    </select>
                </div>
            </div>

            <div class="stats-bar">
                <div class="stat">
                    <span class="stat-label">Total Entries</span>
                    <span class="stat-value" id="totalEntries">0</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Filtered</span>
                    <span class="stat-value" id="filteredEntries">0</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Errors</span>
                    <span class="stat-value text-danger" id="errorCount">0</span>
                </div>
                <div class="stat">
                    <span class="stat-label">Warnings</span>
                    <span class="stat-value text-warning" id="warnCount">0</span>
                </div>
            </div>

            <div class="button-group">
                <button class="btn btn-primary" id="refreshBtn" aria-label="Refresh logs">
                    <span>üîÑ</span> Refresh
                </button>
                <button class="btn btn-success" id="downloadBtn" aria-label="Download logs">
                    <span>‚¨áÔ∏è</span> Download Logs
                </button>
                <button class="btn btn-secondary" id="clearFilterBtn" aria-label="Clear all filters">
                    Clear Filters
                </button>
                <button class="btn btn-danger" id="clearLogsBtn" aria-label="Clear all logs">
                    <span>üóëÔ∏è</span> Clear Logs
                </button>
            </div>
        </div>

        <!-- Logs Panel -->
        <div class="logs-panel">
            <div class="logs-header">
                <h2>Log Entries</h2>
                <div class="auto-refresh">
                    <input type="checkbox" id="autoRefresh" aria-label="Enable auto-refresh">
                    <label for="autoRefresh">Auto-refresh (5s)</label>
                </div>
            </div>
            <div class="logs-container" id="logsContainer" role="log" aria-live="polite" aria-atomic="false">
                <div class="no-logs">
                    <p>Loading logs...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        let logs = [];
        let filteredLogs = [];
        let autoRefreshInterval = null;

        // Fetch logs from server
        async function fetchLogs() {
            const refreshBtn = document.getElementById('refreshBtn');
            const originalText = refreshBtn.innerHTML;
            refreshBtn.disabled = true;
            refreshBtn.innerHTML = '<span class="loading"></span> Loading...';

            try {
                const tailLines = document.getElementById('tailLines').value;
                const response = await fetch(`/api/admin/logs?tail=${tailLines}`);

                if (!response.ok) throw new Error('Failed to fetch logs');

                const data = await response.json();
                logs = data.logs || [];

                applyFilters();
                updateStats();
            } catch (error) {
                console.error('Error fetching logs:', error);
                showNoLogs('Error loading logs: ' + error.message);
            } finally {
                refreshBtn.disabled = false;
                refreshBtn.innerHTML = originalText;
            }
        }

        // Apply filters
        function applyFilters() {
            const level = document.getElementById('logLevel').value;
            const source = document.getElementById('logSource').value;
            const search = document.getElementById('searchQuery').value.toLowerCase();

            filteredLogs = logs.filter(log => {
                if (level !== 'all' && log.level !== level) return false;
                if (source !== 'all' && log.source !== source) return false;
                if (search && !log.message.toLowerCase().includes(search)) return false;
                return true;
            });

            renderLogs();
        }

        // Render logs
        function renderLogs() {
            const container = document.getElementById('logsContainer');

            if (filteredLogs.length === 0) {
                showNoLogs('No logs match the current filters');
                return;
            }

            const search = document.getElementById('searchQuery').value;
            let html = '';

            filteredLogs.forEach(log => {
                let message = escapeHtml(log.message);

                // Highlight search term
                if (search) {
                    const regex = new RegExp(`(${escapeRegex(search)})`, 'gi');
                    message = message.replace(regex, '<span class="search-highlight">$1</span>');
                }

                html += `
                    <div class="log-entry">
                        <span class="log-timestamp">${log.timestamp}</span>
                        <span class="log-level log-level-${log.level}">${log.level}</span>
                        <span class="log-message">${message}</span>
                    </div>
                `;
            });

            container.innerHTML = html;

            // Auto-scroll to bottom
            container.scrollTop = container.scrollHeight;
        }

        // Show no logs message
        function showNoLogs(message) {
            const container = document.getElementById('logsContainer');
            container.innerHTML = `
                <div class="no-logs">
                    <p>${message}</p>
                </div>
            `;
        }

        // Update statistics
        function updateStats() {
            document.getElementById('totalEntries').textContent = logs.length;
            document.getElementById('filteredEntries').textContent = filteredLogs.length;

            const errorCount = logs.filter(log => log.level === 'ERROR' || log.level === 'FATAL').length;
            const warnCount = logs.filter(log => log.level === 'WARN').length;

            document.getElementById('errorCount').textContent = errorCount;
            document.getElementById('warnCount').textContent = warnCount;
        }

        // Download logs
        async function downloadLogs() {
            try {
                const response = await fetch('/api/admin/logs/download');
                if (!response.ok) throw new Error('Failed to download logs');

                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `logs_${new Date().toISOString().split('T')[0]}.log`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                window.URL.revokeObjectURL(url);
            } catch (error) {
                Toast.show('Error downloading logs: ' + error.message, 'error');
            }
        }

        // Clear logs
        async function clearLogs() {
            if (!await showConfirm('Are you sure you want to clear all logs? This action cannot be undone.', 'Clear Logs')) {
                return;
            }

            try {
                const response = await fetch('/api/admin/logs', { method: 'DELETE' });
                if (!response.ok) throw new Error('Failed to clear logs');

                logs = [];
                filteredLogs = [];
                renderLogs();
                updateStats();
                Toast.show('Logs cleared successfully', 'success');
            } catch (error) {
                Toast.show('Error clearing logs: ' + error.message, 'error');
            }
        }

        // Clear filters
        function clearFilters() {
            document.getElementById('logLevel').value = 'all';
            document.getElementById('logSource').value = 'all';
            document.getElementById('searchQuery').value = '';
            applyFilters();
        }

        // Toggle auto-refresh
        function toggleAutoRefresh() {
            const enabled = document.getElementById('autoRefresh').checked;

            if (enabled) {
                autoRefreshInterval = setInterval(fetchLogs, 5000);
            } else {
                if (autoRefreshInterval) {
                    clearInterval(autoRefreshInterval);
                    autoRefreshInterval = null;
                }
            }
        }

        // Escape HTML
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Escape regex
        function escapeRegex(text) {
            return text.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
        }

        // Event listeners
        document.getElementById('logLevel').addEventListener('change', applyFilters);
        document.getElementById('logSource').addEventListener('change', applyFilters);
        document.getElementById('searchQuery').addEventListener('input', applyFilters);
        document.getElementById('tailLines').addEventListener('change', fetchLogs);
        document.getElementById('refreshBtn').addEventListener('click', fetchLogs);
        document.getElementById('downloadBtn').addEventListener('click', downloadLogs);
        document.getElementById('clearLogsBtn').addEventListener('click', clearLogs);
        document.getElementById('clearFilterBtn').addEventListener('click', clearFilters);
        document.getElementById('autoRefresh').addEventListener('change', toggleAutoRefresh);

        // Initial load
        fetchLogs();

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (autoRefreshInterval) {
                clearInterval(autoRefreshInterval);
            }
        });
    </script>
</body>
</html>
{{end}}
