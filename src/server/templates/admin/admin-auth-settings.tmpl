{{template "head" .}}
{{template "navbar" .}}
<main class="container">
<div class="admin-header"><h1>ğŸ” Authentication Settings</h1></div>
<form id="authSettingsForm">
    <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
<section class="card"><h2>OIDC Providers</h2>
<label><input type="checkbox" name="oidc_enabled"> Enable OIDC</label>
<div id="oidcProviders"></div>
<button type="button" onclick="addOIDCProvider()">+ Add Provider</button>
</section>
<section class="card"><h2>LDAP</h2>
<label><input type="checkbox" name="ldap_enabled"> Enable LDAP</label>
<label>Server: <input type="text" name="ldap_server"></label>
<label>Port: <input type="number" name="ldap_port" value="389"></label>
<label>Bind DN: <input type="text" name="ldap_bind_dn"></label>
<label>Bind Password: <input type="password" name="ldap_bind_password"></label>
<label>Base DN: <input type="text" name="ldap_base_dn"></label>
<label>User Filter: <input type="text" name="ldap_user_filter" value="(uid=%s)"></label>
</section>
<section class="card"><h2>TOTP (2FA)</h2>
<label><input type="checkbox" name="totp_enabled"> Enable TOTP</label>
<label>Issuer: <input type="text" name="totp_issuer" value="Weather"></label>
<label>Digits: <input type="number" name="totp_digits" value="6"></label>
<label>Period (seconds): <input type="number" name="totp_period" value="30"></label>
</section>
<section class="card"><h2>Passkeys (WebAuthn)</h2>
<label><input type="checkbox" name="passkeys_enabled"> Enable Passkeys</label>
<label>RP ID: <input type="text" name="passkeys_rp_id"></label>
<label>RP Name: <input type="text" name="passkeys_rp_name" value="Weather"></label>
</section>
<button type="submit">Save Settings</button>
</form>
</main>
{{template "footer" .}}
