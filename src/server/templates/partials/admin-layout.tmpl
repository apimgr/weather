{{/* Admin Panel Layout per AI.md PART 18 */}}
{{template "admin-head" .}}

<div class="admin-layout">
    {{/* Header: Logo, Search, Status, User, Logout per AI.md PART 18 */}}
    {{template "admin-header" .}}

    <div class="admin-main">
        {{/* Sidebar: Collapsible navigation per AI.md PART 18 */}}
        {{template "admin-sidebar" .}}

        {{/* Main Content Area */}}
        <main class="admin-content" id="adminContent">
            {{/* Breadcrumb per AI.md PART 18 */}}
            {{ if .breadcrumb }}
            <nav class="breadcrumb" aria-label="Breadcrumb">
                {{ range $index, $crumb := .breadcrumb }}
                    {{ if $index }}<span class="breadcrumb-separator">â€º</span>{{ end }}
                    {{ if $crumb.URL }}
                        <a href="{{ $crumb.URL }}" class="breadcrumb-link">{{ $crumb.Text }}</a>
                    {{ else }}
                        <span class="breadcrumb-current">{{ $crumb.Text }}</span>
                    {{ end }}
                {{ end }}
            </nav>
            {{ end }}

            {{/* Page Content - inserted by child templates */}}
            <div class="page-content">
                {{template "content" .}}
            </div>
        </main>
    </div>

    {{/* Footer: Version, Docs, Status per AI.md PART 18 */}}
    {{template "admin-footer" .}}
</div>

{{/* AI.md PART 16: All JavaScript in app.js - no separate admin.js */}}

</body>
</html>
