{{template "head" .}}
{{template "navbar" .}}

<div class="weather-container page-container">
    <header class="text-center margin-y-lg">
        <h1 class="text-purple">{{t .server.Lang "dashboard_welcome_back"}}</h1>
        <p class="text-comment">{{.user.Email}} Â· {{.user.Role | upper}}</p>
    </header>

    <section class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">ğŸ“</div>
            <div class="stat-value">{{.locationCount}}</div>
            <div class="stat-label">{{t .server.Lang "dashboard_saved_locations"}}</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">ğŸ””</div>
            <div class="stat-value">{{.unreadCount}}</div>
            <div class="stat-label">{{t .server.Lang "dashboard_unread_alerts"}}</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">ğŸ›¡ï¸</div>
            <div class="stat-value">{{.user.Role | upper}}</div>
            <div class="stat-label">{{t .server.Lang "dashboard_account_role"}}</div>
        </div>
    </section>

    <section class="card">
        <div class="card-header flex items-center justify-between gap-sm">
            <h2 class="card-title">{{t .server.Lang "dashboard_your_saved_locations"}}</h2>
            <a href="/locations/new" class="btn btn-primary btn-sm">+ {{t .server.Lang "dashboard_add_location"}}</a>
        </div>
        <div class="card-body">
            {{if gt .locationCount 0}}
                <div class="grid grid-3 gap-md">
                    {{range .locations}}
                    <div class="card bg-bg">
                        <div class="card-body flex flex-col gap-md">
                            <div>
                                <h3 class="text-cyan text-xl font-semibold">{{.Name}}</h3>
                                <p class="text-comment text-sm">ğŸ“ {{.Latitude}}, {{.Longitude}}</p>
                                {{if .Timezone}}
                                <p class="text-comment text-sm">ğŸ• {{.Timezone}}</p>
                                {{end}}
                            </div>

                            <div>
                                {{if .AlertsEnabled}}
                                <span class="badge badge-success">{{t $.server.Lang "dashboard_alerts_on"}}</span>
                                {{else}}
                                <span class="badge badge-danger">{{t $.server.Lang "dashboard_alerts_off"}}</span>
                                {{end}}
                            </div>

                            <div class="flex gap-sm margin-y-md">
                                <button type="button" class="btn btn-secondary btn-sm flex-1" onclick="window.location.href='/{{.Latitude}},{{.Longitude}}'">{{t $.server.Lang "dashboard_view_weather"}}</button>
                                <button type="button" class="btn btn-primary btn-sm flex-1" onclick="window.location.href='/locations/{{.ID}}/edit'">{{t $.server.Lang "btn_edit"}}</button>
                            </div>
                        </div>
                    </div>
                    {{end}}
                </div>
            {{else}}
                <div class="empty-state">
                    <div class="empty-state__icon">ğŸ“</div>
                    <h3 class="empty-state__title">{{t .server.Lang "dashboard_no_locations_title"}}</h3>
                    <p class="empty-state__message">{{t .server.Lang "dashboard_no_locations_message"}}</p>
                    <a href="/locations/new" class="btn btn-primary margin-y-md">{{t .server.Lang "dashboard_add_first_location"}}</a>
                </div>
            {{end}}
        </div>
    </section>
</div>

<script>
    if (typeof Notifications !== 'undefined') {
        Notifications.startPolling(30000);
    }
</script>

{{template "footer" .}}
