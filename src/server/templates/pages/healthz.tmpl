<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Status - {{.server.app_name}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
    <link rel="stylesheet" href="/static/css/template-overrides.css">
</head>
<body>
    <div class="health-container">
        <div class="health-header">
            <h1>System Health Status</h1>
            <div class="health-status {{if eq .status "healthy"}}status-healthy{{else if eq .status "degraded"}}status-degraded{{else}}status-unhealthy{{end}}">
                {{if eq .status "healthy"}}‚úÖ{{else if eq .status "degraded"}}‚ö†Ô∏è{{else}}‚ùå{{end}}
                {{.status | printf "%s" | title}}
            </div>
            <p>Version: {{.version}} | Uptime: {{.uptime_seconds}} seconds</p>
            <p><small>Last checked: {{.timestamp}}</small></p>
        </div>

        <div class="health-grid">
            <!-- Database Status -->
            <div class="health-card">
                <h3>
                    üíæ Database
                    <span class="check-status {{if eq .checks.database.status "connected"}}check-ok{{else}}check-error{{end}}">
                        {{.checks.database.status}}
                    </span>
                </h3>
                <div class="metric">
                    <span class="metric-label">Type</span>
                    <span class="metric-value">{{.checks.database.type}}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">Latency</span>
                    <span class="metric-value">{{.checks.database.latency_ms}}ms</span>
                </div>
                <div class="metric">
                    <span class="metric-label">Active Connections</span>
                    <span class="metric-value">{{.checks.database.connection_pool.active}}</span>
                </div>
            </div>

            <!-- Memory Status -->
            <div class="health-card">
                <h3>
                    üß† Memory
                    <span class="check-status {{if eq .checks.memory.status "ok"}}check-ok{{else if eq .checks.memory.status "warning"}}check-warning{{else}}check-error{{end}}">
                        {{.checks.memory.status}}
                    </span>
                </h3>
                <div class="metric">
                    <span class="metric-label">Used</span>
                    <span class="metric-value">{{.checks.memory.used_percent}}%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill {{if lt .checks.memory.used_percent 80}}progress-ok{{else if lt .checks.memory.used_percent 95}}progress-warning{{else}}progress-critical{{end}}"
                         style="width: {{.checks.memory.used_percent}}%"></div>
                </div>
                <div class="metric">
                    <span class="metric-label">Heap</span>
                    <span class="metric-value">{{.checks.memory.heap_bytes | printf "%d"}} bytes</span>
                </div>
                <div class="metric">
                    <span class="metric-label">GC Runs</span>
                    <span class="metric-value">{{.checks.memory.gc_runs}}</span>
                </div>
            </div>

            <!-- Disk Status -->
            <div class="health-card">
                <h3>
                    üíø Disk
                    <span class="check-status {{if eq .checks.disk.status "ok"}}check-ok{{else if eq .checks.disk.status "warning"}}check-warning{{else}}check-error{{end}}">
                        {{.checks.disk.status}}
                    </span>
                </h3>
                <div class="metric">
                    <span class="metric-label">Data Directory</span>
                    <span class="metric-value">{{.checks.disk.data_dir.used_percent}}%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill {{if lt .checks.disk.data_dir.used_percent 80}}progress-ok{{else if lt .checks.disk.data_dir.used_percent 95}}progress-warning{{else}}progress-critical{{end}}"
                         style="width: {{.checks.disk.data_dir.used_percent}}%"></div>
                </div>
                <div class="metric">
                    <span class="metric-label">Log Directory</span>
                    <span class="metric-value">{{.checks.disk.log_dir.used_percent}}%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill {{if lt .checks.disk.log_dir.used_percent 80}}progress-ok{{else if lt .checks.disk.log_dir.used_percent 95}}progress-warning{{else}}progress-critical{{end}}"
                         style="width: {{.checks.disk.log_dir.used_percent}}%"></div>
                </div>
            </div>

            <!-- Sessions -->
            <div class="health-card">
                <h3>üë• Sessions</h3>
                <div class="metric">
                    <span class="metric-label">Active</span>
                    <span class="metric-value">{{.checks.sessions.active}}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">Total Today</span>
                    <span class="metric-value">{{.checks.sessions.total_today}}</span>
                </div>
            </div>

            <!-- Cache Status -->
            <div class="health-card">
                <h3>
                    ‚ö° Cache
                    <span class="check-status check-inactive">{{.checks.cache.status}}</span>
                </h3>
                <div class="metric">
                    <span class="metric-label">Type</span>
                    <span class="metric-value">{{.checks.cache.type}}</span>
                </div>
                {{if ne .checks.cache.type "none"}}
                <div class="metric">
                    <span class="metric-label">Hit Rate</span>
                    <span class="metric-value">{{.checks.cache.hit_rate | printf "%.2f"}}%</span>
                </div>
                <div class="metric">
                    <span class="metric-label">Entries</span>
                    <span class="metric-value">{{.checks.cache.entries}}</span>
                </div>
                {{end}}
            </div>

            <!-- SSL Status -->
            {{if .checks.ssl}}
            <div class="health-card">
                <h3>
                    üîí SSL/TLS
                    <span class="check-status {{if eq .checks.ssl.enabled true}}check-ok{{else}}check-inactive{{end}}">
                        {{if .checks.ssl.enabled}}enabled{{else}}disabled{{end}}
                    </span>
                </h3>
                {{if .checks.ssl.enabled}}
                <div class="metric">
                    <span class="metric-label">Expires</span>
                    <span class="metric-value">{{.checks.ssl.expires_at}}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">Auto Renew</span>
                    <span class="metric-value">{{if .checks.ssl.auto_renew}}Yes{{else}}No{{end}}</span>
                </div>
                {{end}}
            </div>
            {{end}}
        </div>

        <!-- Location Databases -->
        <div class="health-card mb-3">
            <h3>üó∫Ô∏è Location Databases</h3>
            <div class="health-grid mt-3">
                <div>
                    <div class="metric">
                        <span class="metric-label">Countries</span>
                        <span class="metric-value">
                            <span class="check-status {{if .checks.location_databases.countries.loaded}}check-ok{{else}}check-error{{end}}">
                                {{.checks.location_databases.countries.status}}
                            </span>
                        </span>
                    </div>
                </div>
                <div>
                    <div class="metric">
                        <span class="metric-label">Cities</span>
                        <span class="metric-value">
                            <span class="check-status {{if .checks.location_databases.cities.loaded}}check-ok{{else}}check-error{{end}}">
                                {{.checks.location_databases.cities.status}}
                            </span>
                        </span>
                    </div>
                </div>
                <div>
                    <div class="metric">
                        <span class="metric-label">Zip Codes</span>
                        <span class="metric-value">
                            <span class="check-status {{if .checks.location_databases.zipcodes.loaded}}check-ok{{else}}check-error{{end}}">
                                {{.checks.location_databases.zipcodes.status}}
                            </span>
                        </span>
                    </div>
                </div>
                <div>
                    <div class="metric">
                        <span class="metric-label">GeoIP</span>
                        <span class="metric-value">
                            <span class="check-status {{if .checks.location_databases.geoip.loaded}}check-ok{{else}}check-error{{end}}">
                                {{.checks.location_databases.geoip.status}} ({{.checks.location_databases.geoip.databases}} DBs)
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Server Info -->
        {{if .server}}
        <div class="health-card">
            <h3>üñ•Ô∏è Server Information</h3>
            <div class="metric">
                <span class="metric-label">Hostname</span>
                <span class="metric-value">{{.server.hostname}}</span>
            </div>
            {{if .server.http_url}}
            <div class="metric">
                <span class="metric-label">HTTP URL</span>
                <span class="metric-value">{{.server.http_url}}</span>
            </div>
            {{end}}
            {{if .server.https_url}}
            <div class="metric">
                <span class="metric-label">HTTPS URL</span>
                <span class="metric-value">{{.server.https_url}}</span>
            </div>
            {{end}}
            {{if .server.mode}}
            <div class="metric">
                <span class="metric-label">Mode</span>
                <span class="metric-value">{{.server.mode}}</span>
            </div>
            {{end}}
        </div>
        {{end}}

        <div class="back-link">
            <p><a href="/">‚Üê Back to Home</a></p>
        </div>
    </div>
</body>
</html>
