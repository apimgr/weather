<!-- Admin Header per AI.md PART 18 -->
<header class="admin-header">
    <div class="admin-header-left">
        <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle Sidebar">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="3" y1="12" x2="21" y2="12"></line>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
        </button>
        <a href="{{.admin_path}}/dashboard" class="admin-logo">
            <span class="admin-logo-icon">⚙️</span>
            <span class="admin-logo-text">{{ .branding.Title }}</span>
        </a>
    </div>

    <div class="admin-header-center">
        <div class="admin-search">
            <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="search"
                   id="admin-search"
                   class="admin-search-input"
                   placeholder="Search settings, logs, users..."
                   aria-label="Search admin panel">
        </div>
    </div>

    <div class="admin-header-right">
        <!-- Status Indicator per AI.md PART 18 -->
        <div class="status-indicator" data-status="{{ .systemStatus }}">
            <span class="status-dot status-{{ .systemStatus }}"></span>
            <span class="status-text">{{ .systemStatusText }}</span>
        </div>

        <!-- Admin User Info -->
        <div class="admin-user-info">
            <svg class="user-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span class="admin-username">{{ .adminUsername }}</span>
        </div>

        <!-- Logout Button per AI.md PART 18 - Always visible -->
        <a href="{{.admin_path}}/logout" class="btn-logout" title="Logout">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                <polyline points="16 17 21 12 16 7"></polyline>
                <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
            <span>Logout</span>
        </a>
    </div>
</header>
