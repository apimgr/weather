                        <div class="form-group">
                            <label class="toggle-label">
                                <span>Enabled</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" name="cve_update.enabled"
                                           {{if .config.Tasks.CVEUpdate.Enabled}}checked{{end}}>
                                    <span class="toggle-slider"></span>
                                </label>
                            </label>
