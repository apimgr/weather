                    <div class="form-row">
                        <div class="form-group">
                            <label class="toggle-label">
                                <span>Retry on Fail</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" name="cve_update.retry_on_fail"
                                           {{if .config.Tasks.CVEUpdate.RetryOnFail}}checked{{end}}>
                                    <span class="toggle-slider"></span>
                                </label>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="cve_update_retry_delay">Retry Delay</label>
                            <input type="text"
                                   name="cve_update.retry_delay"
                                   id="cve_update_retry_delay"
                                   value="{{.config.Tasks.CVEUpdate.RetryDelay}}"
                                   placeholder="1h">
                            <div class="help-text">Delay before retry (e.g., 1h, 30m)</div>
                        </div>
                    </div>
                </div>

                <div class="task-category">Maintenance & Cleanup</div>

                <!-- Session Cleanup -->
                <div class="task-section">
                    <h3>Session Cleanup</h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="toggle-label">
                                <span>Enabled</span>
