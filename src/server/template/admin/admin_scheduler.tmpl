                                   id="cve_update_schedule"
                                   value="{{.config.Tasks.CVEUpdate.Schedule}}"
                                   placeholder="0 5 * * *"
                                   onchange="previewCron('cve_update', this.value)">
                            <div class="help-text">Daily at 05:00</div>
                            <div class="cron-preview" id="cve_update_preview" class="hidden"></div>
                        </div>
