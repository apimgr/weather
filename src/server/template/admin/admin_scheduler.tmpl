{{define "admin/admin-scheduler.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="admin-page-header">
        <h1>Scheduler Configuration</h1>
        <div class="admin-page-breadcrumb">
            <a href="/admin">Admin</a> /
            <a href="{{.admin_path}}/tasks">Tasks</a> /
            <span>Configuration</span>
        </div>
    </div>

    <div class="admin-page-container">
        <div class="admin-nav-links">
            <a href="/admin" class="admin-nav-link">Dashboard</a>
            <a href="{{.admin_path}}/tasks" class="admin-nav-link">Task Monitor</a>
        </div>

        <div class="admin-alert admin-alert-success" id="successAlert" role="alert"></div>
        <div class="admin-alert admin-alert-error" id="errorAlert" role="alert"></div>

        <form id="schedulerForm" method="POST" action="{{.admin_path}}/scheduler/config">
    <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
            <!-- Global Settings -->
            <div class="admin-page-card">
                <h2>Global Settings</h2>

                <div class="form-row">
                    <div class="form-group">
                        <label for="timezone">
                            Timezone
                            <span class="help-icon" title="Timezone for scheduled tasks">i</span>
                        </label>
                        <select name="timezone" id="timezone">
                            <option value="America/New_York" {{if eq .config.Timezone "America/New_York"}}selected{{end}}>America/New_York (EST/EDT)</option>
                            <option value="America/Chicago" {{if eq .config.Timezone "America/Chicago"}}selected{{end}}>America/Chicago (CST/CDT)</option>
                            <option value="America/Denver" {{if eq .config.Timezone "America/Denver"}}selected{{end}}>America/Denver (MST/MDT)</option>
                            <option value="America/Los_Angeles" {{if eq .config.Timezone "America/Los_Angeles"}}selected{{end}}>America/Los_Angeles (PST/PDT)</option>
                            <option value="UTC" {{if eq .config.Timezone "UTC"}}selected{{end}}>UTC</option>
                            <option value="Europe/London" {{if eq .config.Timezone "Europe/London"}}selected{{end}}>Europe/London (GMT/BST)</option>
                            <option value="Europe/Paris" {{if eq .config.Timezone "Europe/Paris"}}selected{{end}}>Europe/Paris (CET/CEST)</option>
                            <option value="Asia/Tokyo" {{if eq .config.Timezone "Asia/Tokyo"}}selected{{end}}>Asia/Tokyo (JST)</option>
                            <option value="Asia/Shanghai" {{if eq .config.Timezone "Asia/Shanghai"}}selected{{end}}>Asia/Shanghai (CST)</option>
                            <option value="Australia/Sydney" {{if eq .config.Timezone "Australia/Sydney"}}selected{{end}}>Australia/Sydney (AEDT/AEST)</option>
                        </select>
                        <div class="help-text">Timezone for scheduled tasks (default: America/New_York)</div>
                    </div>

                    <div class="form-group">
                        <label for="catch_up_window">
                            Catch-up Window
                            <span class="help-icon" title="Run missed tasks within this duration">i</span>
                        </label>
                        <input type="text" name="catch_up_window" id="catch_up_window"
                               value="{{.config.CatchUpWindow}}"
                               placeholder="1h">
                        <div class="help-text">Run missed tasks if within this duration (e.g., 1h, 30m, 2h30m)</div>
                    </div>
                </div>
            </div>

            <!-- Security Tasks -->
            <div class="admin-page-card">
                <h2>Scheduled Tasks</h2>

                <div class="task-category">Security & Certificates</div>

                <!-- SSL Renewal -->
                <div class="task-section critical">
                    <h3>
                        <span>SSL Certificate Renewal</span>
                        <span class="warning-badge">Critical - Cannot Disable</span>
                    </h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="toggle-label">
                                <span>Enabled</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" name="ssl_renewal.enabled" checked disabled>
                                    <span class="toggle-slider"></span>
                                </label>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="ssl_renewal_schedule">Schedule (Cron Expression)</label>
                            <input type="text"
                                   name="ssl_renewal.schedule"
                                   id="ssl_renewal_schedule"
                                   value="{{.config.Tasks.SSLRenewal.Schedule}}"
                                   placeholder="0 3 * * *"
                                   onchange="previewCron('ssl_renewal', this.value)">
                            <div class="help-text">Daily at 03:00 (after backup at 02:00)</div>
                            <div class="cron-preview" id="ssl_renewal_preview" class="hidden"></div>
                        </div>
                    </div>
                </div>

                <!-- GeoIP Update -->
                <div class="task-section">
                    <h3>GeoIP Database Update</h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="toggle-label">
                                <span>Enabled</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" name="geoip_update.enabled"
                                           {{if .config.Tasks.GeoIPUpdate.Enabled}}checked{{end}}>
                                    <span class="toggle-slider"></span>
                                </label>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="geoip_update_schedule">Schedule (Cron Expression)</label>
                            <input type="text"
                                   name="geoip_update.schedule"
                                   id="geoip_update_schedule"
                                   value="{{.config.Tasks.GeoIPUpdate.Schedule}}"
                                   placeholder="0 3 * * 0"
                                   onchange="previewCron('geoip_update', this.value)">
                            <div class="help-text">Weekly Sunday at 03:00</div>
                            <div class="cron-preview" id="geoip_update_preview" class="hidden"></div>
                        </div>
                    </div>
                </div>

                <div class="task-category">Threat Intelligence & Security</div>

                <!-- Blocklist Update -->
                <div class="task-section">
                    <h3>Blocklist Update</h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="toggle-label">
                                <span>Enabled</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" name="blocklist_update.enabled"
                                           {{if .config.Tasks.BlocklistUpdate.Enabled}}checked{{end}}>
                                    <span class="toggle-slider"></span>
                                </label>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="blocklist_update_schedule">Schedule (Cron Expression)</label>
                            <input type="text"
                                   name="blocklist_update.schedule"
                                   id="blocklist_update_schedule"
                                   value="{{.config.Tasks.BlocklistUpdate.Schedule}}"
                                   placeholder="0 4 * * *"
                                   onchange="previewCron('blocklist_update', this.value)">
                            <div class="help-text">Daily at 04:00</div>
                            <div class="cron-preview" id="blocklist_update_preview" class="hidden"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="toggle-label">
                                <span>Retry on Fail</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" name="blocklist_update.retry_on_fail"
                                           {{if .config.Tasks.BlocklistUpdate.RetryOnFail}}checked{{end}}>
                                    <span class="toggle-slider"></span>
                                </label>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="blocklist_update_retry_delay">Retry Delay</label>
                            <input type="text"
                                   name="blocklist_update.retry_delay"
                                   id="blocklist_update_retry_delay"
                                   value="{{.config.Tasks.BlocklistUpdate.RetryDelay}}"
