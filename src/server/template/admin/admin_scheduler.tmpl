                                    <input type="checkbox" name="session_cleanup.enabled"
                                           {{if .config.Tasks.SessionCleanup.Enabled}}checked{{end}}>
                                    <span class="toggle-slider"></span>
                                </label>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="session_cleanup_schedule">Schedule (Cron Expression)</label>
                            <input type="text"
                                   name="session_cleanup.schedule"
                                   id="session_cleanup_schedule"
                                   value="{{.config.Tasks.SessionCleanup.Schedule}}"
                                   placeholder="@hourly"
                                   onchange="previewCron('session_cleanup', this.value)">
                            <div class="help-text">Every hour (@hourly or 0 * * * *)</div>
                            <div class="cron-preview" id="session_cleanup_preview" class="hidden"></div>
                        </div>
                    </div>
                </div>

                <!-- Token Cleanup -->
                <div class="task-section">
                    <h3>Token Cleanup</h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="toggle-label">
                                <span>Enabled</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" name="token_cleanup.enabled"
                                           {{if .config.Tasks.TokenCleanup.Enabled}}checked{{end}}>
                                    <span class="toggle-slider"></span>
                                </label>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="token_cleanup_schedule">Schedule (Cron Expression)</label>
                            <input type="text"
                                   name="token_cleanup.schedule"
                                   id="token_cleanup_schedule"
                                   value="{{.config.Tasks.TokenCleanup.Schedule}}"
                                   placeholder="0 6 * * *"
                                   onchange="previewCron('token_cleanup', this.value)">
                            <div class="help-text">Daily at 06:00</div>
                            <div class="cron-preview" id="token_cleanup_preview" class="hidden"></div>
                        </div>
                    </div>
                </div>

                <!-- Log Rotation -->
                <div class="task-section">
                    <h3>Log Rotation</h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="toggle-label">
                                <span>Enabled</span>
                                <label class="toggle-switch">
                                    <input type="checkbox" name="log_rotation.enabled"
                                           {{if .config.Tasks.LogRotation.Enabled}}checked{{end}}>
                                    <span class="toggle-slider"></span>
                                </label>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="log_rotation_schedule">Schedule (Cron Expression)</label>
                            <input type="text"
                                   name="log_rotation.schedule"
                                   id="log_rotation_schedule"
                                   value="{{.config.Tasks.LogRotation.Schedule}}"
                                   placeholder="0 0 * * *"
                                   onchange="previewCron('log_rotation', this.value)">
                            <div class="help-text">Daily at midnight</div>
                            <div class="cron-preview" id="log_rotation_preview" class="hidden"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="log_rotation_max_age">Max Age</label>
                            <input type="text"
                                   name="log_rotation.max_age"
                                   id="log_rotation_max_age"
                                   value="{{.config.Tasks.LogRotation.MaxAge}}"
                                   placeholder="30d">
