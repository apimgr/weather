{{define "admin-domains"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Domains - Admin - {{.AppName}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    {{template "admin-nav" .}}

    <div class="domains-container">
        <h1>Custom Domains Management</h1>
        <p>Manage custom domains for the weather service. TEMPLATE.md PART 34.</p>

        <!-- Add Domain Form -->
        <div class="add-domain-form">
            <h2>Add New Domain</h2>
            <form id="addDomainForm">
    <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
                <div class="form-group">
                    <label for="domain">Domain Name:</label>
                    <input type="text" id="domain" name="domain" placeholder="example.com" required>
                    <small>Enter domain without http:// or https://</small>
                </div>

                {{if .IsAdmin}}
                <div class="form-group">
                    <label for="userID">Assign to User (optional):</label>
                    <select id="userID" name="user_id">
                        <option value="">Server Default</option>
                        {{range .Users}}
                        <option value="{{.ID}}">{{.Username}}</option>
                        {{end}}
                    </select>
                </div>
                {{end}}

                <button type="submit" class="btn btn-primary">Add Domain</button>
            </form>
        </div>

        <!-- Domains List -->
        <div id="domainsList">
            {{if .Domains}}
                {{range .Domains}}
                <div class="domain-card" data-domain-id="{{.ID}}">
                    <div class="domain-header">
                        <div class="domain-name">{{.Domain}}</div>
                        <div class="domain-status">
                            {{if .IsVerified}}
                            <span class="status-badge status-verified">✓ Verified</span>
                            {{else}}
                            <span class="status-badge status-unverified">⚠ Unverified</span>
                            {{end}}

                            {{if .IsActive}}
                            <span class="status-badge status-active">● Active</span>
                            {{else}}
                            <span class="status-badge status-inactive">○ Inactive</span>
                            {{end}}
                        </div>
                    </div>

                    <div class="domain-details">
                        <div class="detail-item">
                            <span class="detail-label">Domain ID</span>
                            <span class="detail-value">{{.ID}}</span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Owner</span>
                            <span class="detail-value">
                                {{if .UserID}}
                                User ID: {{.UserID}}
                                {{else}}
                                Server Default
                                {{end}}
                            </span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">SSL Enabled</span>
                            <span class="detail-value">
                                {{if .SSLEnabled}}
                                ✓ Yes
                                {{else}}
                                ✗ No
                                {{end}}
                            </span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Redirect WWW</span>
                            <span class="detail-value">
                                {{if .RedirectWWW}}
                                ✓ Yes
                                {{else}}
                                ✗ No
                                {{end}}
                            </span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Created</span>
                            <span class="detail-value">{{.CreatedAt.Format "2006-01-02 15:04"}}</span>
                        </div>

                        {{if .VerifiedAt}}
                        <div class="detail-item">
                            <span class="detail-label">Verified At</span>
                            <span class="detail-value">{{.VerifiedAt.Format "2006-01-02 15:04"}}</span>
                        </div>
                        {{end}}
                    </div>

                    {{if not .IsVerified}}
                    <div class="verification-info">
                        <h4>Domain Verification Required</h4>
                        <p>Add the following TXT record to your domain's DNS:</p>
                        <div class="verification-code">
                            _weather-verify.{{.Domain}} TXT "weather-verify-{{.ID}}"
                        </div>
                        <p>After adding the DNS record, click "Verify Domain" below.</p>
                    </div>
                    {{end}}

                    {{if .SSLEnabled}}
                    <div class="ssl-info">
                        <strong>SSL Certificate:</strong> {{.SSLCertPath}}<br>
                        <strong>SSL Key:</strong> {{.SSLKeyPath}}
                    </div>
                    {{end}}

                    <div class="domain-actions">
                        {{if not .IsVerified}}
                        <button class="btn btn-success" onclick="verifyDomain({{.ID}})">
                            Verify Domain
                        </button>
                        {{end}}

                        {{if .IsVerified}}
                            {{if .IsActive}}
                            <button class="btn btn-warning" onclick="deactivateDomain({{.ID}})">
                                Deactivate
                            </button>
                            {{else}}
                            <button class="btn btn-success" onclick="activateDomain({{.ID}})">
                                Activate
                            </button>
                            {{end}}
                        {{end}}

                        <button class="btn btn-secondary" onclick="showSSLForm({{.ID}})">
                            Update SSL
                        </button>

                        <button class="btn btn-danger" onclick="deleteDomain({{.ID}}, '{{.Domain}}')">
                            Delete
                        </button>
                    </div>
                </div>
                {{end}}
            {{else}}
                <div class="domain-card">
                    <p>No custom domains configured yet. Add one above to get started.</p>
                </div>
            {{end}}
        </div>
    </div>

    <script>
        // Path variables - SPEC compliant (AI.md PART 13)
        const API_PATH = '{{.api_path}}';
        const ADMIN_API_PATH = '{{.admin_api_path}}';

        // Add domain form submission
        document.getElementById('addDomainForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const domain = document.getElementById('domain').value;
            const userIDSelect = document.getElementById('userID');
            const userID = userIDSelect ? (userIDSelect.value || null) : null;

            try {
                const response = await fetch(ADMIN_API_PATH + '/server/domains', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        domain: domain,
                        user_id: userID
                    })
                });

                if (response.ok) {
                    Toast.show('Domain added successfully!', 'success');
                    window.location.reload();
                } else {
                    const error = await response.text();
                    Toast.show('Failed to add domain: ' + error, 'error');
                }
            } catch (error) {
                Toast.show('Error: ' + error.message, 'error');
            }
        });

        // Verify domain
        async function verifyDomain(id) {
            try {
                const response = await fetch(`${ADMIN_API_PATH}/server/domains/${id}/verify`, {
                    method: 'PUT'
                });

                if (response.ok) {
                    Toast.show('Domain verified successfully!', 'success');
                    window.location.reload();
                } else {
                    const error = await response.text();
                    Toast.show('Verification failed: ' + error, 'error');
                }
            } catch (error) {
                Toast.show('Error: ' + error.message, 'error');
            }
        }

        // Activate domain
        async function activateDomain(id) {
            try {
                const response = await fetch(`${ADMIN_API_PATH}/server/domains/${id}/activate`, {
                    method: 'PUT'
                });

                if (response.ok) {
                    Toast.show('Domain activated successfully!', 'success');
                    window.location.reload();
                } else {
                    const error = await response.text();
                    Toast.show('Activation failed: ' + error, 'error');
                }
            } catch (error) {
                Toast.show('Error: ' + error.message, 'error');
            }
        }

        // Deactivate domain
        async function deactivateDomain(id) {
            try {
                const response = await fetch(`${ADMIN_API_PATH}/server/domains/${id}/deactivate`, {
                    method: 'PUT'
                });

                if (response.ok) {
                    Toast.show('Domain deactivated successfully!', 'success');
                    window.location.reload();
                } else {
                    const error = await response.text();
                    Toast.show('Deactivation failed: ' + error, 'error');
                }
            } catch (error) {
                Toast.show('Error: ' + error.message, 'error');
            }
        }

        // Delete domain
        async function deleteDomain(id, domain) {
            if (!await showConfirm(`Are you sure you want to delete domain "${domain}"?`, 'Delete Domain')) {
                return;
            }

            try {
                const response = await fetch(`${ADMIN_API_PATH}/server/domains/${id}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    Toast.show('Domain deleted successfully!', 'success');
                    window.location.reload();
                } else {
                    const error = await response.text();
                    Toast.show('Deletion failed: ' + error, 'error');
                }
            } catch (error) {
                Toast.show('Error: ' + error.message, 'error');
            }
        }

        // Show SSL form (simplified version)
        function showSSLForm(id) {
            const certPath = prompt('Enter SSL certificate path:');
            if (!certPath) return;

            const keyPath = prompt('Enter SSL key path:');
            if (!keyPath) return;

            updateSSL(id, certPath, keyPath);
        }

        // Update SSL
        async function updateSSL(id, certPath, keyPath) {
            try {
                const response = await fetch(`${ADMIN_API_PATH}/server/domains/${id}/ssl`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        cert_path: certPath,
                        key_path: keyPath
                    })
                });

                if (response.ok) {
                    Toast.show('SSL configuration updated successfully!', 'success');
                    window.location.reload();
                } else {
                    const error = await response.text();
                    Toast.show('SSL update failed: ' + error, 'error');
                }
            } catch (error) {
                Toast.show('Error: ' + error.message, 'error');
            }
        }
    </script>
</body>
</html>
{{end}}
