{{/* Admin Dashboard per AI.md PART 18 */}}
{{define "content"}}

<div class="dashboard-header">
    <h1>Dashboard</h1>
    <p class="text-comment">Overview of server status and system resources</p>
</div>

{{/* Status Cards per AI.md PART 18 */}}
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-header">
            <svg class="stat-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2v20M2 12h20"></path>
            </svg>
            <h3>Server Status</h3>
        </div>
        <div class="stat-value status-{{ .serverStatus }}">{{ .serverStatusText }}</div>
        <div class="stat-footer">
            <span class="stat-label">Uptime:</span>
            <span class="stat-data">{{ .uptime }}</span>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <svg class="stat-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            <h3>Users</h3>
        </div>
        <div class="stat-value">{{ .totalUsers }}</div>
        <div class="stat-footer">
            <span class="stat-label">Active:</span>
            <span class="stat-data">{{ .activeUsers }}</span>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <svg class="stat-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <h3>API Requests</h3>
        </div>
        <div class="stat-value">{{ .apiRequests24h }}</div>
        <div class="stat-footer">
            <span class="stat-label">Last hour:</span>
            <span class="stat-data">{{ .apiRequestsLastHour }}</span>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <svg class="stat-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
            </svg>
            <h3>Storage</h3>
        </div>
        <div class="stat-value">{{ .storageUsed }}</div>
        <div class="stat-footer">
            <span class="stat-label">Available:</span>
            <span class="stat-data">{{ .storageAvailable }}</span>
        </div>
    </div>
</div>

{{/* System Resources per AI.md PART 18 */}}
<div class="dashboard-section">
    <h2>System Resources</h2>
    <div class="resource-grid">
        <div class="resource-card">
            <div class="resource-header">
                <span class="resource-name">CPU Usage</span>
                <span class="resource-value">{{ .cpuUsage }}%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: {{ .cpuUsage }}%"></div>
            </div>
        </div>

        <div class="resource-card">
            <div class="resource-header">
                <span class="resource-name">Memory Usage</span>
                <span class="resource-value">{{ .memoryUsage }}%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: {{ .memoryUsage }}%"></div>
            </div>
        </div>

        <div class="resource-card">
            <div class="resource-header">
                <span class="resource-name">Disk Usage</span>
                <span class="resource-value">{{ .diskUsage }}%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: {{ .diskUsage }}%"></div>
            </div>
        </div>
    </div>
</div>

{{/* Recent Activity per AI.md PART 18 */}}
<div class="dashboard-section">
    <h2>Recent Activity</h2>
    <div class="activity-list">
        {{ range .recentActivity }}
        <div class="activity-item">
            <div class="activity-icon activity-{{ .type }}">
                {{ if eq .type "user" }}üë§
                {{ else if eq .type "security" }}üîí
                {{ else if eq .type "system" }}‚öôÔ∏è
                {{ else }}üìä{{ end }}
            </div>
            <div class="activity-content">
                <div class="activity-message">{{ .message }}</div>
                <div class="activity-time">{{ .time }}</div>
            </div>
        </div>
        {{ else }}
        <p class="text-comment">No recent activity</p>
        {{ end }}
    </div>
</div>

{{/* Quick Actions per AI.md PART 18 */}}
<div class="dashboard-section">
    <h2>Quick Actions</h2>
    <div class="quick-actions">
        <a href="{{.admin_path}}/server/backup" class="action-card">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            <span>Create Backup</span>
        </a>

        <a href="{{.admin_path}}/server/logs" class="action-card">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            <span>View Logs</span>
        </a>

        <a href="{{.admin_path}}/users" class="action-card">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            <span>Manage Users</span>
        </a>

        <a href="{{.admin_path}}/server/settings" class="action-card">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M12 1v6m0 6v6m6-12h-6m6 6h-6"></path>
            </svg>
            <span>Server Settings</span>
        </a>
    </div>
</div>

{{end}}

{{/* Use the admin layout */}}
{{template "admin_layout" .}}
