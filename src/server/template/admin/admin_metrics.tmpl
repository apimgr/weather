{{define "admin/admin-metrics.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="admin-page-header">
        <h1>üìä Metrics Configuration</h1>
        <div class="admin-page-breadcrumb">
            <a href="{{.admin_path}}">Admin</a> /
            <span>Metrics</span>
        </div>
    </div>

    <div class="admin-page-container wide">
        <div class="admin-nav-links">
            <a href="{{.admin_path}}" class="admin-nav-link">‚Üê Dashboard</a>
            <a href="{{.admin_path}}/system" class="admin-nav-link">System Info</a>
        </div>

        <div class="admin-alert admin-alert-success" id="successAlert" role="alert"></div>
        <div class="admin-alert admin-alert-error" id="errorAlert" role="alert"></div>

        <!-- Metrics Statistics -->
        <div class="admin-page-card">
            <h2>üìà Current Metrics</h2>
            <div class="stats-grid">
                <div class="stat-box">
                    <div class="stat-value" id="totalMetrics">0</div>
                    <div class="stat-label">Total Metrics</div>
                </div>
                <div class="stat-box">
                    <div class="stat-value" id="enabledMetrics">0</div>
                    <div class="stat-label">Enabled</div>
                </div>
                <div class="stat-box">
                    <div class="stat-value" id="customMetrics">0</div>
                    <div class="stat-label">Custom</div>
                </div>
                <div class="stat-box">
                    <div class="stat-value" id="exportFormats">3</div>
                    <div class="stat-label">Export Formats</div>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="admin-tabs">
            <button class="admin-tab active" data-tab="prometheus">Prometheus</button>
            <button class="admin-tab" data-tab="builtin">Built-in Metrics</button>
            <button class="admin-tab" data-tab="custom">Custom Metrics</button>
            <button class="admin-tab" data-tab="export">Export</button>
        </div>

        <!-- Prometheus Tab -->
        <div class="admin-tab-content active" id="prometheus">
            <div class="metrics-grid">
                <div class="admin-page-card">
                    <h2>‚öôÔ∏è Prometheus Configuration</h2>
                    <form id="prometheusForm">
    <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
                        <div class="form-group">
                            <label>
                                <input type="checkbox" id="prometheusEnabled" checked>
                                Enable Prometheus metrics endpoint
                            </label>
                            <small>Exposes metrics at /metrics</small>
                        </div>

                        <div class="form-group">
                            <label for="metricsPath">Metrics Path</label>
                            <input type="text" id="metricsPath" value="/metrics">
                            <small>URL path for metrics endpoint</small>
                        </div>

                        <div class="form-group">
                            <label for="namespace">Namespace</label>
                            <input type="text" id="namespace" value="weather" placeholder="weather">
                            <small>Metric name prefix (e.g., weather_http_requests_total)</small>
                        </div>

                        <div class="form-group">
                            <label for="subsystem">Subsystem</label>
                            <input type="text" id="subsystem" placeholder="api">
                            <small>Optional subsystem name</small>
                        </div>

                        <div class="form-group">
                            <label>
                                <input type="checkbox" id="includeGoMetrics" checked>
                                Include Go runtime metrics
                            </label>
                        </div>

                        <div class="form-group">
                            <label>
                                <input type="checkbox" id="includeProcessMetrics" checked>
                                Include process metrics
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary">üíæ Save Configuration</button>
                    </form>
                </div>

                <div class="admin-page-card">
                    <h2>üîó Integration</h2>
                    <div class="form-group">
                        <label>Metrics Endpoint</label>
                        <div class="code-block" class="mt-1">http://localhost:3000/metrics</div>
                    </div>

                    <div class="form-group">
                        <label>Prometheus Configuration</label>
                        <div class="code-block">scrape_configs:
  - job_name: 'weather'
    static_configs:
      - targets: ['localhost:3000']
    metrics_path: '/metrics'
    scrape_interval: 15s</div>
                    </div>

                    <div class="btn-group">
                        <button class="btn btn-success" id="testPrometheusBtn">üß™ Test Endpoint</button>
                        <button class="btn btn-secondary" id="downloadConfigBtn">üì• Download Config</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Built-in Metrics Tab -->
        <div class="admin-tab-content" id="builtin">
            <div class="admin-page-card">
                <h2>üìä Built-in Metrics</h2>
                <div id="builtinMetrics">
                    <div class="metric-item">
                        <div class="metric-info">
                            <h3>HTTP Request Count</h3>
                            <p>Total number of HTTP requests by method and path</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked data-metric="http_requests">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="metric-item">
                        <div class="metric-info">
                            <h3>HTTP Request Duration</h3>
                            <p>Request processing time histogram</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked data-metric="http_duration">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="metric-item">
                        <div class="metric-info">
                            <h3>API Response Status</h3>
                            <p>Count of responses by status code</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked data-metric="api_status">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="metric-item">
                        <div class="metric-info">
                            <h3>Database Queries</h3>
                            <p>Number and duration of database queries</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked data-metric="db_queries">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="metric-item">
                        <div class="metric-info">
                            <h3>Cache Hit Rate</h3>
                            <p>Redis/Valkey cache hit/miss ratio</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked data-metric="cache_hits">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="metric-item">
                        <div class="metric-info">
                            <h3>Active Connections</h3>
                            <p>Current number of active connections</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked data-metric="connections">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="metric-item">
                        <div class="metric-info">
                            <h3>Task Execution</h3>
                            <p>Scheduled task execution count and duration</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked data-metric="tasks">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>

                    <div class="metric-item">
                        <div class="metric-info">
                            <h3>Email Notifications</h3>
                            <p>Email send success/failure count</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked data-metric="emails">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Custom Metrics Tab -->
        <div class="admin-tab-content" id="custom">
            <div class="admin-page-card">
                <h2>‚ûï Add Custom Metric</h2>
                <form id="customMetricForm">
    <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
                    <div class="grid">
                        <div class="form-group">
                            <label for="metricName">Metric Name</label>
                            <input type="text" id="metricName" placeholder="weather_custom_metric" required>
                            <small>Use lowercase with underscores</small>
                        </div>

                        <div class="form-group">
                            <label for="metricType">Type</label>
                            <select id="metricType">
                                <option value="counter">Counter (increases only)</option>
                                <option value="gauge">Gauge (can increase/decrease)</option>
                                <option value="histogram">Histogram (observations)</option>
                                <option value="summary">Summary (quantiles)</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="metricHelp">Description</label>
                        <input type="text" id="metricHelp" placeholder="Description of what this metric measures" required>
                    </div>

                    <div class="form-group">
                        <label for="metricLabels">Labels (comma-separated)</label>
                        <input type="text" id="metricLabels" placeholder="method,path,status">
                        <small>Optional labels for grouping</small>
                    </div>

                    <button type="submit" class="btn btn-success">‚ûï Add Metric</button>
                </form>

                <h3 class="mt-3 mb-2">Custom Metrics List</h3>
                <div id="customMetricsList">
                    <p class="text-center text-muted p-3">No custom metrics defined</p>
                </div>
            </div>
        </div>

        <!-- Export Tab -->
        <div class="admin-tab-content" id="export">
            <div class="metrics-grid">
                <div class="admin-page-card">
                    <h2>üì§ Export Formats</h2>
                    <div class="btn-group-vertical">
                        <button class="btn btn-primary" id="exportPrometheusBtn">
                            üìä Export Prometheus Format
                        </button>
                        <button class="btn btn-primary" id="exportJsonBtn">
                            üìã Export JSON
                        </button>
                        <button class="btn btn-primary" id="exportOpenMetricsBtn">
                            üìà Export OpenMetrics
                        </button>
                    </div>
                </div>

                <div class="admin-page-card">
                    <h2>üëÅÔ∏è Preview</h2>
                    <div class="metric-preview" id="exportPreview">
                        <p class="text-center text-muted">Click an export button to see preview</p>
                    </div>
                </div>
            </div>

            <div class="admin-page-card">
                <h2>üîó External Links</h2>
                <div class="form-group">
                    <label for="grafanaUrl">Grafana Dashboard URL</label>
                    <input type="text" id="grafanaUrl" placeholder="http://grafana.example.com/dashboard/weather">
                    <small>Link to your Grafana dashboard (optional)</small>
                </div>

                <div class="form-group">
                    <label for="prometheusUrl">Prometheus Server URL</label>
                    <input type="text" id="prometheusUrl" placeholder="http://prometheus.example.com:9090">
                    <small>Link to your Prometheus server (optional)</small>
                </div>

                <button class="btn btn-primary" id="saveLinksBtn">üíæ Save Links</button>
            </div>
        </div>
    </div>

    <script>
        // Tab switching
        document.querySelectorAll('.admin-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.admin-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.admin-tab-content').forEach(c => c.classList.remove('active'));

                tab.classList.add('active');
                document.getElementById(tab.dataset.tab).classList.add('active');
            });
        });

        // Load metrics stats
        async function loadStats() {
            try {
                const response = await fetch('/api/v1/admin/metrics/stats');
                const data = await response.json();

                document.getElementById('totalMetrics').textContent = data.total || 0;
                document.getElementById('enabledMetrics').textContent = data.enabled || 0;
                document.getElementById('customMetrics').textContent = data.custom || 0;
            } catch (error) {
                console.error('Failed to load stats:', error);
            }
        }

        // Save Prometheus configuration
        document.getElementById('prometheusForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const config = {
                enabled: document.getElementById('prometheusEnabled').checked,
                path: document.getElementById('metricsPath').value,
                namespace: document.getElementById('namespace').value,
                subsystem: document.getElementById('subsystem').value,
                includeGoMetrics: document.getElementById('includeGoMetrics').checked,
                includeProcessMetrics: document.getElementById('includeProcessMetrics').checked
            };

            try {
                const response = await fetch('/api/v1/admin/metrics/config', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(config)
                });

                if (!response.ok) throw new Error('Failed to save configuration');

                showSuccess('Prometheus configuration saved successfully!');
            } catch (error) {
                showError('Failed to save configuration: ' + error.message);
            }
        });

        // Test Prometheus endpoint
        document.getElementById('testPrometheusBtn').addEventListener('click', async () => {
            try {
                const response = await fetch('/metrics');
                const text = await response.text();

                if (response.ok) {
                    showSuccess('Prometheus endpoint is working! Check browser console for output.');
                    console.log('Metrics output:', text);
                } else {
                    showError('Endpoint returned error: ' + response.status);
                }
            } catch (error) {
                showError('Failed to test endpoint: ' + error.message);
            }
        });

        // Export formats
        document.getElementById('exportPrometheusBtn').addEventListener('click', async () => {
            const response = await fetch('/metrics');
            const text = await response.text();
            document.getElementById('exportPreview').textContent = text;
        });

        document.getElementById('exportJsonBtn').addEventListener('click', async () => {
            const response = await fetch('/api/v1/admin/metrics/export?format=json');
            const data = await response.json();
            document.getElementById('exportPreview').textContent = JSON.stringify(data, null, 2);
        });

        // Show messages
        function showSuccess(msg) {
            const alert = document.getElementById('successAlert');
            alert.textContent = msg;
            alert.classList.add('show');
            setTimeout(() => alert.classList.remove('show'), 5000);
        }

        function showError(msg) {
            const alert = document.getElementById('errorAlert');
            alert.textContent = msg;
            alert.classList.add('show');
            setTimeout(() => alert.classList.remove('show'), 5000);
        }

        // Initial load
        loadStats();
    </script>
</body>
</html>
{{end}}
