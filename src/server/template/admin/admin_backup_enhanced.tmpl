{{define "admin/admin-backup-enhanced.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="admin-page-header">
        <h1>üíæ Backup Management</h1>
        <div class="admin-page-breadcrumb">
            <a href="/admin">Admin</a> /
            <span>Backup</span>
        </div>
    </div>

    <div class="admin-page-container wide">
        <div class="admin-nav-links">
            <a href="/admin" class="admin-nav-link">‚Üê Dashboard</a>
            <a href="{{.admin_path}}/database" class="admin-nav-link">Database</a>
        </div>

        <div class="admin-alert admin-alert-success" id="successAlert"></div>
        <div class="admin-alert admin-alert-error" id="errorAlert"></div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-box">
                <div class="stat-value" id="totalBackups">0</div>
                <div class="stat-label">Total Backups</div>
            </div>
            <div class="stat-box">
                <div class="stat-value" id="totalSize">0 MB</div>
                <div class="stat-label">Total Size</div>
            </div>
            <div class="stat-box">
                <div class="stat-value" id="lastBackup">Never</div>
                <div class="stat-label">Last Backup</div>
            </div>
            <div class="stat-box">
                <div class="stat-value" id="nextBackup">-</div>
                <div class="stat-label">Next Scheduled</div>
            </div>
        </div>

        <div class="grid">
            <!-- Create Backup -->
            <div class="card">
                <h2>‚ûï Create Backup</h2>
                <div class="btn-group-vertical">
                    <button class="btn btn-success" id="fullBackupBtn">
                        üíæ Full Backup
                    </button>
                    <button class="btn btn-primary" id="dataOnlyBtn">
                        üìä Data Only
                    </button>
                    <button class="btn btn-primary" id="configOnlyBtn">
                        ‚öôÔ∏è Config Only
                    </button>
                </div>
                <div id="backupProgress" class="hidden">
                    <div class="progress-bar">
                        <div class="progress-fill" id="progressFill"></div>
                    </div>
                    <p id="progressText" class="text-center text-muted"></p>
                </div>
            </div>

            <!-- Automated Backups -->
            <div class="card">
                <h2>‚è∞ Automated Backups</h2>
                <form id="scheduleForm">
    <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
                    <div class="form-group">
                        <label>
                            <input type="checkbox" id="autoBackup" checked>
                            Enable automatic backups
                        </label>
                    </div>

                    <div class="form-group">
                        <label for="frequency">Frequency</label>
                        <select id="frequency">
                            <option value="hourly">Every Hour</option>
                            <option value="daily" selected>Daily</option>
                            <option value="weekly">Weekly</option>
                            <option value="monthly">Monthly</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="retention">Retention (days)</label>
                        <input type="number" id="retention" value="30" min="1" max="365">
                        <small>Automatically delete backups older than this</small>
                    </div>

                    <div class="form-group">
                        <label>
                            <input type="checkbox" id="compress" checked>
                            Compress backups (gzip)
                        </label>
                    </div>

                    <div class="form-group">
                        <label>
                            <input type="checkbox" id="verify" checked>
                            Verify backup integrity
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary">üíæ Save Schedule</button>
                </form>
            </div>
        </div>

        <!-- Backup List -->
        <div class="card mt-3">
            <h2>üìã Backup History</h2>
            <div id="backupList">
                <p class="text-center text-muted p-3">Loading backups...</p>
            </div>
        </div>
    </div>

    <script>
        // Load backup stats
        async function loadStats() {
            try {
                const response = await fetch('/api/v1/admin/backup/stats');
                const data = await response.json();

                document.getElementById('totalBackups').textContent = data.total || 0;
                document.getElementById('totalSize').textContent = data.totalSize || '0 MB';
                document.getElementById('lastBackup').textContent = data.lastBackup || 'Never';
                document.getElementById('nextBackup').textContent = data.nextBackup || '-';
            } catch (error) {
                console.error('Failed to load stats:', error);
            }
        }

        // Load backup list
        async function loadBackups() {
            try {
                const response = await fetch('/api/v1/admin/backup/list');
                const data = await response.json();

                const container = document.getElementById('backupList');
                if (!data.backups || data.backups.length === 0) {
                    container.innerHTML = '<p class="text-center text-muted p-3">No backups found</p>';
                    return;
                }

                container.innerHTML = data.backups.map(backup => `
                    <div class="backup-item">
                        <div class="backup-status status-${backup.status}"></div>
                        <div class="backup-info">
                            <h3>${backup.filename}</h3>
                            <div class="backup-meta">
                                ${backup.size} ‚Ä¢ ${backup.date} ‚Ä¢ ${backup.type}
                            </div>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-sm btn-primary" onclick="downloadBackup('${backup.filename}')">
                                ‚¨áÔ∏è Download
                            </button>
                            <button class="btn btn-sm btn-success" onclick="restoreBackup('${backup.filename}')">
                                üîÑ Restore
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteBackup('${backup.filename}')">
                                üóëÔ∏è
                            </button>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Failed to load backups:', error);
            }
        }

        // Create full backup
        document.getElementById('fullBackupBtn').addEventListener('click', () => createBackup('full'));
        document.getElementById('dataOnlyBtn').addEventListener('click', () => createBackup('data'));
        document.getElementById('configOnlyBtn').addEventListener('click', () => createBackup('config'));

        async function createBackup(type) {
            const progress = document.getElementById('backupProgress');
            const fill = document.getElementById('progressFill');
            const text = document.getElementById('progressText');

            progress.style.display = 'block';
            updateProgress(0, 'Starting backup...');

            try {
                const response = await fetch('/api/v1/admin/backup/create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ type })
                });

                if (!response.ok) throw new Error('Backup failed');

                // Simulate progress
                for (let i = 10; i <= 100; i += 10) {
                    await new Promise(resolve => setTimeout(resolve, 200));
                    updateProgress(i, i === 100 ? 'Backup complete!' : 'Creating backup...');
                }

                showSuccess('Backup created successfully!');
                setTimeout(() => {
                    progress.style.display = 'none';
                    loadBackups();
                    loadStats();
                }, 2000);

            } catch (error) {
                showError('Backup failed: ' + error.message);
                progress.style.display = 'none';
            }
        }

        function updateProgress(percent, message) {
            document.getElementById('progressFill').style.width = percent + '%';
            document.getElementById('progressText').textContent = message;
        }

        // Download backup
        async function downloadBackup(filename) {
            window.location.href = `/api/v1/admin/backup/download/${filename}`;
        }

        // Restore backup
        async function restoreBackup(filename) {
            if (!await showConfirm(`Restore from backup: ${filename}?\n\nThis will overwrite current data!`, 'Restore Backup')) {
                return;
            }

            try {
                const response = await fetch('/api/v1/admin/backup/restore', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ filename })
                });

                if (!response.ok) throw new Error('Restore failed');

                showSuccess('Backup restored successfully! Please restart the application.');
            } catch (error) {
                showError('Restore failed: ' + error.message);
            }
        }

        // Delete backup
        async function deleteBackup(filename) {
            if (!await showConfirm(`Delete backup: ${filename}?`, 'Delete Backup')) return;

            try {
                const response = await fetch(`/api/v1/admin/backup/delete/${filename}`, {
                    method: 'DELETE'
                });

                if (!response.ok) throw new Error('Delete failed');

                showSuccess('Backup deleted successfully');
                loadBackups();
                loadStats();
            } catch (error) {
                showError('Delete failed: ' + error.message);
            }
        }

        // Save schedule
        document.getElementById('scheduleForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const schedule = {
                enabled: document.getElementById('autoBackup').checked,
                frequency: document.getElementById('frequency').value,
                retention: parseInt(document.getElementById('retention').value),
                compress: document.getElementById('compress').checked,
                verify: document.getElementById('verify').checked
            };

            try {
                const response = await fetch('/api/v1/admin/backup/schedule', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(schedule)
                });

                if (!response.ok) throw new Error('Failed to save schedule');

                showSuccess('Backup schedule saved successfully!');
                loadStats();
            } catch (error) {
                showError('Failed to save schedule: ' + error.message);
            }
        });

        // Show messages
        function showSuccess(msg) {
            const alert = document.getElementById('successAlert');
            alert.textContent = msg;
            alert.classList.add('show');
            setTimeout(() => alert.classList.remove('show'), 5000);
        }

        function showError(msg) {
            const alert = document.getElementById('errorAlert');
            alert.textContent = msg;
            alert.classList.add('show');
            setTimeout(() => alert.classList.remove('show'), 5000);
        }

        // Initial load
        loadStats();
        loadBackups();

        // Auto-refresh every 30 seconds
        setInterval(() => {
            loadStats();
            loadBackups();
        }, 30000);
    </script>
</body>
</html>
{{end}}
