<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card setup-card">
            <div class="login-header">
                <h1 class="login-title">Optional Services</h1>
                <p class="login-subtitle">Server Setup - Step 5 of 6</p>
            </div>

            <div class="setup-progress">
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 83.33%"></div>
                </div>
                <div class="progress-steps">
                    <span class="step completed">Admin</span>
                    <span class="step completed">API Token</span>
                    <span class="step completed">Server</span>
                    <span class="step completed">Security</span>
                    <span class="step active">Services</span>
                    <span class="step">Complete</span>
                </div>
            </div>

            <div class="login-info">
                <p>Enable optional services. All can be configured later in the admin panel.</p>
            </div>

            {{ if .error }}
            <div class="error-message" role="alert">{{ .error }}</div>
            {{ end }}

            <form method="POST" action="" id="services-form" autocomplete="off">
                <input type="hidden" name="csrf_token" value="{{.csrf_token}}">

                <div class="service-option">
                    <label class="checkbox-label">
                        <input type="checkbox"
                               id="enable_ssl"
                               name="enable_ssl"
                               value="true">
                        <span>Enable SSL/HTTPS</span>
                    </label>
                    <p class="form-hint">Configure HTTPS with Let's Encrypt or custom certificates</p>

                    <div id="ssl-options" class="sub-options hidden">
                        <div class="form-group">
                            <label class="form-label" for="ssl_domain">SSL Domain</label>
                            <input type="text"
                                   id="ssl_domain"
                                   name="ssl_domain"
                                   class="form-input"
                                   value="{{ .DefaultDomain }}"
                                   placeholder="example.com">
                            <small class="form-hint">Domain for Let's Encrypt certificate</small>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="ssl_email">Contact Email</label>
                            <input type="email"
                                   id="ssl_email"
                                   name="ssl_email"
                                   class="form-input"
                                   value="{{ .AdminEmail }}"
                                   placeholder="admin@example.com">
                            <small class="form-hint">Required for Let's Encrypt notifications</small>
                        </div>
                    </div>
                </div>

                <div class="service-option">
                    <label class="checkbox-label">
                        <input type="checkbox"
                               id="enable_multiuser"
                               name="enable_multiuser"
                               value="true">
                        <span>Enable Multi-User Mode</span>
                    </label>
                    <p class="form-hint">Allow user registration and accounts (PART 34 feature)</p>

                    <div id="multiuser-options" class="sub-options hidden">
                        <div class="form-group">
                            <label class="form-label" for="registration_mode">Registration Mode</label>
                            <select id="registration_mode" name="registration_mode" class="form-input">
                                <option value="public">Public (anyone can register)</option>
                                <option value="invite">Invite Only</option>
                                <option value="disabled">Disabled</option>
                            </select>
                        </div>
                    </div>
                </div>

                {{ if .TorAvailable }}
                <div class="service-option">
                    <div class="service-status">
                        <span class="status-badge status-active">Auto-Enabled</span>
                    </div>
                    <label class="checkbox-label disabled">
                        <input type="checkbox" checked disabled>
                        <span>Tor Hidden Service</span>
                    </label>
                    <p class="form-hint">Tor binary detected - hidden service will be created automatically</p>
                    {{ if .OnionAddress }}
                    <p class="onion-preview"><code class="long-string">{{ .OnionAddress }}</code></p>
                    {{ end }}
                </div>
                {{ end }}

                <button type="submit" id="submit-btn" class="btn-login">Complete Setup</button>
            </form>

            <div class="setup-skip">
                <a href="?skip=true" class="text-comment">Skip this step (enable later)</a>
            </div>
        </div>

        {{ if .version }}
        <div class="login-footer">
            v{{ .version }}
        </div>
        {{ end }}
    </div>

    <script>
        document.getElementById('enable_ssl').addEventListener('change', function() {
            document.getElementById('ssl-options').classList.toggle('hidden', !this.checked);
        });

        document.getElementById('enable_multiuser').addEventListener('change', function() {
            document.getElementById('multiuser-options').classList.toggle('hidden', !this.checked);
        });

        document.getElementById('services-form').addEventListener('submit', function(e) {
            var btn = document.getElementById('submit-btn');
            btn.disabled = true;
            btn.textContent = 'Completing Setup...';
        });
    </script>
</body>
</html>
