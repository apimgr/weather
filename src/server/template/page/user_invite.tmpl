{{define "page/user_invite.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <h1>User Invite</h1>
            <p>You have been invited to join</p>

            {{if .error}}
            <div class="alert alert-error">{{.error}}</div>
            {{end}}

            <form method="POST" class="auth-form">
                <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
                <input type="hidden" name="code" value="{{.code}}">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required autocomplete="username" placeholder="Choose a username">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required autocomplete="email" placeholder="you@example.com">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required autocomplete="new-password" placeholder="Enter password">
                </div>
                <div class="form-group">
                    <label for="confirm_password">Confirm Password</label>
                    <input type="password" id="confirm_password" name="confirm_password" required autocomplete="new-password" placeholder="Confirm password">
                </div>
                <button type="submit" class="btn btn-primary">Accept & Join</button>
            </form>

            <div class="auth-links">
                <a href="/auth/login">Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
{{end}}
