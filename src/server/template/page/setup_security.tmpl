<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card setup-card">
            <div class="login-header">
                <h1 class="login-title">Security Settings</h1>
                <p class="login-subtitle">Server Setup - Step 4 of 6</p>
            </div>

            <div class="setup-progress">
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 66.67%"></div>
                </div>
                <div class="progress-steps">
                    <span class="step completed">Admin</span>
                    <span class="step completed">API Token</span>
                    <span class="step completed">Server</span>
                    <span class="step active">Security</span>
                    <span class="step">Services</span>
                    <span class="step">Complete</span>
                </div>
            </div>

            <div class="login-info">
                <p>Configure security settings. These can be changed later in the admin panel.</p>
            </div>

            {{ if .error }}
            <div class="error-message" role="alert">{{ .error }}</div>
            {{ end }}

            <form method="POST" action="" id="security-form" autocomplete="off">
                <input type="hidden" name="csrf_token" value="{{.csrf_token}}">

                <div class="form-group">
                    <label class="form-label" for="backup_password">Backup Encryption Password</label>
                    <input type="password"
                           id="backup_password"
                           name="backup_password"
                           class="form-input"
                           placeholder="Optional but recommended">
                    <small class="form-hint">Encrypts all backups with AES-256-GCM. Store this password securely!</small>
                </div>

                <div class="form-group">
                    <label class="form-label" for="backup_password_confirm">Confirm Backup Password</label>
                    <input type="password"
                           id="backup_password_confirm"
                           name="backup_password_confirm"
                           class="form-input"
                           placeholder="Confirm password">
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox"
                               id="enable_2fa"
                               name="enable_2fa"
                               value="true">
                        <span>Enable Two-Factor Authentication (TOTP)</span>
                    </label>
                    <small class="form-hint">Adds an extra layer of security to your admin account</small>
                </div>

                <div id="totp-setup" class="hidden">
                    {{ if .TOTPSecret }}
                    <div class="totp-qr">
                        <p>Scan this QR code with your authenticator app:</p>
                        <img src="{{ .TOTPQRCode }}" alt="TOTP QR Code" class="qr-code">
                        <p>Or enter this secret manually:</p>
                        <code class="long-string">{{ .TOTPSecret }}</code>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="totp_code">Verify TOTP Code</label>
                        <input type="text"
                               id="totp_code"
                               name="totp_code"
                               class="form-input"
                               placeholder="000000"
                               pattern="[0-9]{6}"
                               maxlength="6">
                        <small class="form-hint">Enter the 6-digit code from your authenticator app</small>
                    </div>
                    {{ end }}
                </div>

                <button type="submit" id="submit-btn" class="btn-login">Continue to Optional Services</button>
            </form>

            <div class="setup-skip">
                <a href="?skip=true" class="text-comment">Skip this step (configure later)</a>
            </div>
        </div>

        {{ if .version }}
        <div class="login-footer">
            v{{ .version }}
        </div>
        {{ end }}
    </div>

    <script>
        document.getElementById('enable_2fa').addEventListener('change', function() {
            var totpSetup = document.getElementById('totp-setup');
            if (this.checked) {
                totpSetup.classList.remove('hidden');
            } else {
                totpSetup.classList.add('hidden');
            }
        });

        document.getElementById('security-form').addEventListener('submit', function(e) {
            var backupPwd = document.getElementById('backup_password').value;
            var backupConfirm = document.getElementById('backup_password_confirm').value;
            if (backupPwd && backupPwd !== backupConfirm) {
                e.preventDefault();
                alert('Backup passwords do not match');
                return false;
            }
            var btn = document.getElementById('submit-btn');
            btn.disabled = true;
            btn.textContent = 'Saving...';
        });
    </script>
</body>
</html>
