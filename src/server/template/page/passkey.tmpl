{{define "page/passkey.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <h1>Passkey Authentication</h1>
            <p>Authenticate with your passkey</p>

            {{if .error}}
            <div class="alert alert-error">{{.error}}</div>
            {{end}}

            <div class="auth-message">
                <p>Passkey authentication will be initiated by your browser</p>
            </div>

            <div class="auth-links">
                <a href="/auth/login">Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
{{end}}
