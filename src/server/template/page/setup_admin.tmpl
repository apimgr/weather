<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h1 class="login-title">Create Administrator</h1>
                <p class="login-subtitle">Server Setup - Step 1 of 6</p>
            </div>

            <div class="login-info">
                <p>Create the primary administrator account.</p>
                <p>This account manages server settings and cannot be deleted.</p>
            </div>

            <div class="setup-progress">
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 16.67%"></div>
                </div>
                <div class="progress-steps">
                    <span class="step active">Admin</span>
                    <span class="step">API Token</span>
                    <span class="step">Server</span>
                    <span class="step">Security</span>
                    <span class="step">Services</span>
                    <span class="step">Complete</span>
                </div>
            </div>

            {{ if .error }}
            <div class="error-message" role="alert">{{ .error }}</div>
            {{ end }}

            {{/* Form works without JS (progressive enhancement) */}}
            <form method="POST" action="" id="admin-form" autocomplete="off">
                <input type="hidden" name="csrf_token" value="{{.csrf_token}}">

                <div class="form-group">
                    <label class="form-label" for="username">Username</label>
                    <input type="text"
                           id="username"
                           name="username"
                           class="form-input"
                           value="administrator"
                           required
                           minlength="3"
                           aria-required="true">
                    <small class="form-hint">Default: administrator</small>
                </div>

                <div class="form-group">
                    <label class="form-label" for="email">Email Address</label>
                    <input type="email"
                           id="email"
                           name="email"
                           class="form-input"
                           required
                           placeholder="admin@example.com"
                           aria-required="true">
                    <small class="form-hint">For password recovery</small>
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox"
                               id="use_random"
                               name="use_random"
                               value="true"
                               checked>
                        <span>Generate random password (recommended)</span>
                    </label>
                    <small class="form-hint">A secure 32-character password will be generated and shown once</small>
                </div>

                <div id="password-fields" class="password-fields hidden">
                    <div class="form-group">
                        <label class="form-label" for="password">Password</label>
                        <input type="password"
                               id="password"
                               name="password"
                               class="form-input"
                               minlength="12"
                               aria-required="false">
                        <small class="form-hint">Minimum 12 characters</small>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="confirm_password">Confirm Password</label>
                        <input type="password"
                               id="confirm_password"
                               name="confirm_password"
                               class="form-input"
                               minlength="12"
                               aria-required="false">
                    </div>
                </div>

                <button type="submit" id="submit-btn" class="btn-login">Create Administrator</button>
            </form>
        </div>

        {{ if .version }}
        <div class="login-footer">
            v{{ .version }}
        </div>
        {{ end }}
    </div>

    {{/* Progressive enhancement - form works without this */}}
    <script>
        (function() {
            var useRandomCheckbox = document.getElementById('use_random');
            var passwordFields = document.getElementById('password-fields');
            var passwordInput = document.getElementById('password');
            var confirmInput = document.getElementById('confirm_password');

            function togglePasswordFields() {
                if (useRandomCheckbox.checked) {
                    passwordFields.classList.add('hidden');
                    passwordInput.removeAttribute('required');
                    confirmInput.removeAttribute('required');
                } else {
                    passwordFields.classList.remove('hidden');
                    passwordInput.setAttribute('required', 'required');
                    confirmInput.setAttribute('required', 'required');
                }
            }

            useRandomCheckbox.addEventListener('change', togglePasswordFields);
            togglePasswordFields();

            document.getElementById('admin-form').addEventListener('submit', function(e) {
                var btn = document.getElementById('submit-btn');
                btn.disabled = true;
                btn.textContent = 'Creating...';
            });
        })();
    </script>
</body>
</html>
