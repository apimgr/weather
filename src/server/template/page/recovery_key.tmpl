{{define "page/recovery_key.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.title}}</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <h1>Use Recovery Key</h1>
            <p>Enter one of your recovery keys to regain access</p>

            {{if .error}}
            <div class="alert alert-error">{{.error}}</div>
            {{end}}

            <form method="POST" class="auth-form">
                <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
                <div class="form-group">
                    <label for="recovery_key">Recovery Key</label>
                    <input type="text" id="recovery_key" name="recovery_key" required autocomplete="off" placeholder="Enter your recovery key">
                </div>
                <button type="submit" class="btn btn-primary">Submit Recovery Key</button>
            </form>

            <div class="auth-links">
                <a href="/auth/login">Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
{{end}}
