<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}} - Admin Panel</title>
    <link rel="stylesheet" href="/static/css/dracula.css">
    <script src="/static/js/app.js" defer></script>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üåê</text></svg>">
</head>
<body>
    {{template "navbar" .}}

    <div class="web-container">
        <h1>üåê Web Settings</h1>
        <p>Manage robots.txt and security.txt files for your weather service.</p>

        <div id="success-message" class="success-message" role="status" aria-live="polite"></div>
        <div id="error-message" class="error-message" role="alert" aria-live="assertive"></div>

        <!-- robots.txt Section -->
        <div class="web-section">
            <h2>ü§ñ robots.txt</h2>

            <div class="info-box">
                <p><strong>About robots.txt:</strong></p>
                <p>The robots.txt file tells search engines which pages they can and cannot crawl. This helps protect sensitive areas like the admin panel from being indexed.</p>
                <p><strong>Template Variables:</strong></p>
                <ul>
                    <li><code>{app_url}</code> - Automatically replaced with: <strong>{{.AppURL}}</strong></li>
                </ul>
            </div>

            <form id="robots-form" role="form" aria-label="Edit robots.txt">
    <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
                <div class="form-group">
                    <label for="robots-txt">
                        robots.txt Content
                    </label>
                    <textarea
                        id="robots-txt"
                        name="robots_txt"
                        aria-label="robots.txt content editor"
                        aria-describedby="robots-help"
                    >{{.RobotsTxt}}</textarea>
                    <small id="robots-help">
                        Edit the robots.txt content above. Use {app_url} as a placeholder for the application URL.
                    </small>
                </div>

                <div class="button-group">
                    <button type="submit" class="btn btn-primary" aria-label="Save robots.txt">
                        üíæ Save robots.txt
                    </button>
                    <button type="button" class="btn btn-view" onclick="window.open('/robots.txt', '_blank')" aria-label="Preview robots.txt in new tab">
                        üëÅÔ∏è Preview
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="resetRobotsTxt()" aria-label="Reset robots.txt to default">
                        üîÑ Reset to Default
                    </button>
                </div>

                <div class="preview-link">
                    <a href="/robots.txt" target="_blank" rel="noopener noreferrer">View live: /robots.txt</a>
                </div>
            </form>
        </div>

        <!-- security.txt Section -->
        <div class="web-section">
            <h2>üîí security.txt (RFC 9116)</h2>

            <div class="info-box">
                <p><strong>About security.txt:</strong></p>
                <p>The security.txt file (RFC 9116) provides security contact information for security researchers to report vulnerabilities.</p>
                <p><strong>Required Fields:</strong></p>
                <ul>
                    <li><code>Contact:</code> - Email, URL, or phone number for security reports</li>
                    <li><code>Expires:</code> - Date when this file expires (RFC3339 format)</li>
                </ul>
                <p><strong>Template Variables:</strong></p>
                <ul>
                    <li><code>{app_url}</code> - Automatically replaced with: <strong>{{.AppURL}}</strong></li>
                </ul>
            </div>

            <form id="security-form" role="form" aria-label="Edit security.txt">
    <input type="hidden" name="csrf_token" value="{{.csrf_token}}">
                <div class="form-group">
                    <label for="security-txt">
                        security.txt Content
                    </label>
                    <textarea
                        id="security-txt"
                        name="security_txt"
                        aria-label="security.txt content editor"
                        aria-describedby="security-help"
                    >{{.SecurityTxt}}</textarea>
                    <small id="security-help">
                        Edit the security.txt content above. Must include Contact and Expires fields per RFC 9116.
                    </small>
                </div>

                <div class="button-group">
                    <button type="submit" class="btn btn-primary" aria-label="Save security.txt">
                        üíæ Save security.txt
                    </button>
                    <button type="button" class="btn btn-view" onclick="window.open('/.well-known/security.txt', '_blank')" aria-label="Preview security.txt in new tab">
                        üëÅÔ∏è Preview
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="resetSecurityTxt()" aria-label="Reset security.txt to default">
                        üîÑ Reset to Default
                    </button>
                </div>

                <div class="preview-link">
                    <a href="/.well-known/security.txt" target="_blank" rel="noopener noreferrer">View live: /.well-known/security.txt</a>
                </div>
            </form>
        </div>
    </div>

    {{template "footer" .}}

    <script>
        const apiBase = '{{.admin_api_path}}';

        // robots.txt form handler
        document.getElementById('robots-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const content = document.getElementById('robots-txt').value;

            try {
                const response = await fetch(apiBase + '/server/web/robots', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ content })
                });

                const data = await response.json();

                if (data.success) {
                    showSuccess('robots.txt updated successfully!');
                } else {
                    showError(data.error?.message || 'Failed to update robots.txt');
                }
            } catch (error) {
                showError('Network error: ' + error.message);
            }
        });

        // security.txt form handler
        document.getElementById('security-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const content = document.getElementById('security-txt').value;

            // Basic validation for RFC 9116 compliance
            if (!content.includes('Contact:')) {
                showError('security.txt must include a Contact field');
                return;
            }
            if (!content.includes('Expires:')) {
                showError('security.txt must include an Expires field');
                return;
            }

            try {
                const response = await fetch(apiBase + '/server/web/security', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ content })
                });

                const data = await response.json();

                if (data.success) {
                    showSuccess('security.txt updated successfully!');
                } else {
                    showError(data.error?.message || 'Failed to update security.txt');
                }
            } catch (error) {
                showError('Network error: ' + error.message);
            }
        });

        // Reset robots.txt to default
        function resetRobotsTxt() {
            const defaultRobots = `User-agent: *
Allow: /
Disallow: /admin/
Disallow: /api/
Sitemap: {app_url}/sitemap.xml`;

            document.getElementById('robots-txt').value = defaultRobots;
            showSuccess('robots.txt reset to default. Click Save to apply.');
        }

        // Reset security.txt to default
        function resetSecurityTxt() {
            const nextYear = new Date();
            nextYear.setFullYear(nextYear.getFullYear() + 1);
            const expires = nextYear.toISOString().split('.')[0] + 'Z';

            const defaultSecurity = `Contact: mailto:security@example.com
Expires: ${expires}
Preferred-Languages: en
Canonical: {app_url}/.well-known/security.txt`;

            document.getElementById('security-txt').value = defaultSecurity;
            showSuccess('security.txt reset to default. Click Save to apply.');
        }

        // Show success message
        function showSuccess(message) {
            const successDiv = document.getElementById('success-message');
            const errorDiv = document.getElementById('error-message');

            errorDiv.style.display = 'none';
            successDiv.textContent = message;
            successDiv.style.display = 'block';

            setTimeout(() => {
                successDiv.style.display = 'none';
            }, 5000);
        }

        // Show error message
        function showError(message) {
            const successDiv = document.getElementById('success-message');
            const errorDiv = document.getElementById('error-message');

            successDiv.style.display = 'none';
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';

            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 5000);
        }
    </script>
</body>
</html>
