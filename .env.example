# Weather Service - Environment Variables
# Copy this file to .env and customize for your deployment

# ============================================
# Server Configuration
# ============================================

# Port the service will listen on
PORT=3000

# Gin mode: debug, release, or test
GIN_MODE=release

# ============================================
# Database Configuration
# ============================================

# Path to SQLite database file
DATABASE_PATH=/data/weather.db

# ============================================
# Authentication & Security
# ============================================

# Session secret for cookie encryption
# IMPORTANT: Generate a secure random string for production!
# Example: openssl rand -base64 32
SESSION_SECRET=change-me-to-a-secure-random-string

# ============================================
# Application Settings
# ============================================

# Timezone for the application
TZ=UTC

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ============================================
# Docker Build Arguments
# ============================================

# Version tag for the image
VERSION=latest

# Build date (auto-generated if not set)
# BUILD_DATE=2024-01-01T00:00:00Z

# Git commit hash (auto-generated if not set)
# VCS_REF=abc123

# Environment name for labels
ENVIRONMENT=production

# ============================================
# Optional: Rate Limiting
# ============================================

# Rate limit for anonymous users (requests per hour)
# RATE_LIMIT_ANON=120

# Rate limit for authenticated users (requests per hour)
# RATE_LIMIT_AUTH=1200

# ============================================
# Optional: External Services
# ============================================

# Custom weather API endpoints (if using alternatives)
# WEATHER_API_URL=https://api.open-meteo.com/v1/forecast
# GEOCODING_API_URL=https://geocoding-api.open-meteo.com/v1/search

# ============================================
# Development Settings
# ============================================

# Enable debug mode (not recommended for production)
# DEBUG=false

# Auto-reload on file changes (development only)
# AUTO_RELOAD=false
