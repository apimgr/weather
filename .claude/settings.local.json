{
  "env": {
    "MAX_THINKING_TOKENS": "1000"
  },
  "permissions": {
    "allow": [
      "Bash(src/templates/admin/panel.html)",
      "Bash(find /root/Projects/github/apimgr/weather/src/templates -name \"*.html\" -exec sed -i )",
      "Bash({} ;)",
      "Bash(curl:*)",
      "Read(//tmp/**)",
      "Bash(make build:*)",
      "Bash(make:*)",
      "Bash(docker compose:*)",
      "WebFetch(domain:wthr.top)",
      "Bash(wget:*)",
      "Bash(find:*)",
      "Bash(python3 -m mkdocs:*)"
    ],
    "deny": [],
    "ask": []
  },
  "model": "sonnet[1m]",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write(**)",
        "hooks": [
          {
            "type": "command",
            "command": "if grep -qi 'anthropic\\|claude' \"$file\" 2>/dev/null; then echo 'Error: File contains vendor names (Anthropic/Claude)' >&2; exit 1; fi"
          }
        ]
      }
    ]
  },
  "preferences": {
    "auto_commit": false
  }
}
